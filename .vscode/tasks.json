{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: FastAPI",
      "type": "shell",
      "command": "python3",
      "args": [
        "-m",
        "uvicorn",
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev: Next.js",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev: All",
      "dependsOrder": "parallel",
      "dependsOn": ["Dev: FastAPI", "Dev: Next.js"]
    }
  ]
}
