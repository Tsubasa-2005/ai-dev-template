{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup: Backend deps",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "make venv"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev: FastAPI",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "uvicorn", "app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "dependsOn": ["Setup: Backend deps"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev: Next.js",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source $HOME/.asdf/asdf.sh 2>/dev/null || true; export PATH=$HOME/.asdf/shims:$HOME/.asdf/bin:$PATH; corepack enable >/dev/null 2>&1 || true; yarn run dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Dev: All",
      "dependsOrder": "parallel",
      "dependsOn": ["Dev: FastAPI", "Dev: Next.js"]
    }
  ]
}
