{
  "name": "root",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "build": "echo \"use workspace builds\"",
    "dev": "echo \"use VS Code tasks to run backend/frontend\"",
    "lint": "dotenv -e .env -- yarn workspaces foreach -v -A -p run lint",
    "typecheck": "dotenv -e .env -- yarn workspaces foreach -v -A -p run typecheck || true",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.3.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.11",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "typescript": "^5.5.4",
    "ts-node": "^10.9.2",
    "@types/node": "^20.14.10"
  }
}
